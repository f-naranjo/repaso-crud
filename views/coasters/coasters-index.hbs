<div class="container coasters-index">

  <a href="/coasters/new" class="btn btn-dark">Crear nueva montaña rusa</a>

  <h1 style="font-weight: 100">Índice de montañas rusas</h1>
{{#each coasters}}
  <hr>
  <a href="/coasters/{{_id}}" class="btn btn-sm btn-dark">Ver detalles</a>
  <a href="/coasters/{{_id}}/edit" class="btn btn-sm btn-dark">Editar</a>
  <form action="/coasters/{{_id}}/delete" method="POST">
  <input type="hidden" name="id" value="{{_id}}">
  <button type="submit" class="btn btn-sm  btn-dark">Eliminar</button>
  </form>
  <h4>{{name}}</h4>
  <p>{{description}}</p>
  <small><strong>Longitud: </strong> {{length}}| <strong>Inversiones: </strong> {{inversions}}| <strong>Parque: </strong> {{park.name}}</small>
{{/each}}  


</div>